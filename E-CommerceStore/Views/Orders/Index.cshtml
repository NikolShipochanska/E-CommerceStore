@model IEnumerable<E_CommerceStore.Models.Order>

@{
    ViewData["Title"] = "Orders";
}

<h1>My Orders</h1>

<table class="table table-bordered">
    <thead>
        <tr>
            <th>Order #</th>
            <th>Products</th>
            <th>Total Price</th>
            <th>Status</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var order in Model)
        {
            <tr>
                <td>@order.DisplayOrderNumber</td>
                <td>
                    <ul>
                        @foreach (var item in order.Items)
                        {
                            <li>@item.Product.Name (@item.Quantity)</li>
                        }
                    </ul>
                </td>
                <td>@order.TotalPrice.ToString("C")</td>
                <td>@order.Status</td>
                <td>
                    <a asp-action="Details" asp-route-id="@order.Id" class="btn btn-info btn-sm">Details</a>
                    @if (order.Status == "Pending")
                    {
                        <a asp-controller="Orders" asp-action="Delete" asp-route-id="@order.Id" class="btn btn-danger btn-sm">Cancel</a>
                    }
                </td>
            </tr>
        }
    </tbody>
</table>
